* {
    font-size 15px
    line-height 1.5
    margin 0
    padding 0
    position relative
    // box-sizing border-box
}

body, td, input, select, textarea, p {
    font-family 'Microsoft JhengHei','Helvetica Neue','Helvetica','Arial', dashicons, sans-serif !important;
}

body {
    color #3a3a3a
    box-sizing border-box
}

ul {
    margin 0
    padding 0
    list-style none
}

a {
    text-decoration none
    color #3a3a3a
}

.text-shadow-gray-900
    text-shadow 3px 1px 3px #111827

.text-shadow-green-400
    text-shadow 0 0 4px #34D399

.text-shadow-black
    text-shadow 0 0 10px #000

.lh60
    line-height 60px

.f1
    flex 1

.f-jc
    display flex
    justify-content center

.f-aic
    display flex
    align-items center

.img-box
    width 100%
    padding-top 100%

.img-fit
    width 100%
    height 100%
    position absolute
    top 0
    left 0

.img-img
    width 100%
    display block
    object-fit cover
    height inherit

.img-img-center
    @extend .img-img
    object-position center
